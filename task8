# 2
height = int(input("boy"))
weight = int(input("kilo"))


def bmi_calculator(heights, weights):
    bmi = weights * (heights / 100) ** 2
    if bmi < 18.5:
        return "zəif"
    elif bmi > 25:
        return "normal"
    elif bmi < 30:
        return "kilolu"
    else:
        return "obez"


a = bmi_calculator(height, weight)
print(a)
